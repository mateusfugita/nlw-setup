//npx prisma migrate dev -> run migration for created schema

//npx prisma studio -> UI studio for data view

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id String @id @default(uuid())
  title String
  created_at DateTime

  @@map("habits")
}
